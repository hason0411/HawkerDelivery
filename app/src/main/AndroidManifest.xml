<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colon3.cz2006.hawkerdelivery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Boundary.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Boundary.ViewByHawkerActivity"
            android:label="@string/title_activity_view_by_hawker" />
        <activity
            android:name=".Boundary.ViewByFoodCatActivity"
            android:label="@string/title_activity_view_by_food_cat" />
        <activity android:name=".Boundary.FavouritesActivity" />
        <activity android:name=".Boundary.HomeActivity" />
        <activity android:name=".Boundary.AccSettingsActivity" />
        <activity android:name=".Boundary.OrderActivity"></activity>
    </application>

</manifest>
